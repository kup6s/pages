# Build Stage
FROM --platform=$BUILDPLATFORM golang:1.25-alpine AS builder

ARG TARGETARCH

WORKDIR /app

# Cache dependencies
COPY go.mod go.sum ./
RUN go mod download

# Copy source and build
COPY . .
RUN CGO_ENABLED=0 GOOS=linux GOARCH=$TARGETARCH go build -a -o operator ./cmd/operator

# Runtime Stage
FROM gcr.io/distroless/static:nonroot

WORKDIR /

COPY --from=builder /app/operator .

USER 65532:65532

ENTRYPOINT ["/operator"]
